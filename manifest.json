{
  "manifest_version": 3,
  "name": "CareerFit AI - Assess My Fit",
  "version": "1.1",
  "description": "Analyzes LinkedIn jobs against your resume using Gemini.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://linkedin.com/jobs/*",
        "https://www.linkedin.com/jobs/*",
        "https://linkedin.com/jobs/*"
      ],
      "js": ["dist/content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "careerfit.png"
  }
}