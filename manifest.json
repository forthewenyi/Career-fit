{
  "manifest_version": 3,
  "name": "CareerFit AI - Assess My Fit",
  "version": "1.2",
  "description": "Analyzes job postings against your resume using Gemini AI.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "careerfit.png"
  }
}
